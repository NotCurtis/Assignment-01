<%- include ../partials/Header.ejs %> 
<%- include ../partials/Main_Nav.ejs %> 

<div class="container">
    <div class='row'>
        <div class="col-md-offset-1 col-md-11">
            <h1><%= title %> </h1>
 
            <a href="/business-contact/add" class="btn btn-primary" role='button'>
            <i class="fas fa-plus-circle"></i> Add Contact</a>

            <br>
            <table class="table table-borderd table-striped table-hover">
                <tr>
                    <th class="text-center col-2">Name</th>
                    <th class="text-center col-2">Phone Number</th>
                    <th class="text-center col-3">Email</th>     
                    <th class="text-center col-2"></th>
                    <th class="text-center col-2"></th> 
                </tr>

                <% for(let count=0; count < ContactsList.length; count++) { %>
                    <tr>
                        <td class="text-center col-2"><%= ContactsList[count].Name %> </td>
                        <td class="text-center col-2"><%= ContactsList[count].PNumber %> </td>
                        <td class="text-center col-3"><%= ContactsList[count].Email %> </td>
                        <td class="text-center col-2">
                            <a href="/business-contact/edit/<%= ContactsList[count]._id %> " class="btn btn-primary">
                            <i class="fas fa-pencil-alt">Edit</i>
                            </a>
                        </td>
                        <td class="text-center col-2">
                            <a href="/business-contact/delete/<%= ContactsList[count]._id %>" class="btn btn-danger">
                            <i class="fas fa-trash-alt">Delete</i>
                            </a>
                        </td>
                    </tr>                        
                <% } %> 
            </table>
        </div>
    </div>
</div>


  
<%- include ../partials/Bottom_Nav.ejs %> 
<%- include ../partials/Footer.ejs %> 