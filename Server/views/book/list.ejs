<%- include ../partials/Header.ejs %> 
<%- include ../partials/Main_Nav.ejs %> 
    <div class="container">
        <div class='row'>
            <div class="col-md-offset-1 col-md-11">
                <h1><%= title %> </h1>

                <% if (typeof displayName == 'string' && displayName) { %> 
                <a href="/book-list/add" class="btn btn-primary" role='button'>
                <i class="fas fa-plus-circle"></i> Add a Book</a>
                <% } %> 
                <br>
                <table class="table table-borderd table-striped table-hover">
                    <tr>
                        <th class="text-center col-2">Title</th>
                        <th class="text-center col-2">Author</th>
                        <th class="text-center col-1">Date</th>
                        <th class="text-center col-2">Type</th>
                        <th class="text-center col-1">Price</th>
                        <% if (typeof displayName == 'string' && displayName) { %> 
                        <th class="text-center col-2"></th>
                        <th class="text-center col-2"></th>
                        <% } %> 
                    </tr>

                    <% for(let count=0; count < BookList.length; count++) { %>
                        <tr>
                            <td class="text-center col-2"><%= BookList[count].Name %> </td>
                            <td class="text-center col-2"><%= BookList[count].Author %> </td>
                            <td class="text-center col-1"><%= BookList[count].Date %> </td>
                            <td class="text-center col-2"><%= BookList[count].Type %> </td>
                            <td class="text-center col-1"><%= BookList[count].Price %> </td>
                            <% if (typeof displayName == 'string' && displayName) { %> 
                            <td class="text-center col-2">
                                <a href="/book-list/edit/<%= BookList[count]._id %> " class="btn btn-primary">
                                <i class="fas fa-pencil-alt">Edit</i>
                                </a>
                            </td>
                            <td class="text-center col-2">
                                <a href="/book-list/delete/<%= BookList[count]._id %>" class="btn btn-danger">
                                <i class="fas fa-trash-alt">Delete</i>
                                </a>
                            <% } %> 
                            </td>
                        </tr>                        
                    <% } %> 
                </table>
            </div>
        </div>
    </div>
  
  
  <%- include ../partials/Bottom_Nav.ejs %> 
  <%- include ../partials/Footer.ejs %> 