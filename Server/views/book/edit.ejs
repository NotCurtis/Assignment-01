<%- include ../partials/Header.ejs %> 
<%- include ../partials/Main_Nav.ejs %> 



<div class="container">
    <div class="row">
        <div class="col-md-offset-1 col-md-11">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Book Title</label>
                        <input type="text" class="form-control" 
                        id='nameTextField'
                        placeholder="Enter the Book Title"
                        name='Name' value="<%= book.Name %> "
                         required>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Author</label>
                        <input type="text" class="form-control" 
                        id='authorTextField'
                        placeholder="Enter the Authors Name"
                        name='Author' value="<%= book.Author %> "
                        required>
                </div>
                <div class="form-group">
                    <label for="dateTextField">Year</label>
                        <input type="text" class="form-control" 
                        id='dateTextField'
                        placeholder="Enter the Year of release"
                        name='Date' value="<%= book.Date %> " required>
                </div>
                <div class="form-group">
                    <label for="typeTextField">Type of Book</label>
                        <input type="text" class="form-control" 
                        id='typeTextField'
                        placeholder="Enter the Type of Book"
                        name='Type' value="<%= book.Type %> " required>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Price of Book</label>
                        <input type="text" class="form-control" 
                        id='priceTextField'
                        placeholder="Enter the Price of the Book"
                        name='Price' value="<%= book.Price %>" 
                        required>
                </div>

                <button class="btn btn-primary">
                    <i class="fas fa-edit"></i> Submit</button>
                <a href="/book-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>

        </div>
</div>

  
<%- include ../partials/Bottom_Nav.ejs %> 
<%- include ../partials/Footer.ejs %> 